<%= content_for :title do 'Lista de Articulos - Administrador - Comic Con Colombia 2015' end %>

<div class="container">
  <p id="notice"><%= notice %></p>

  <h1>Lista de art√≠culos</h1>

  <table class="table table-striped">
    <thead>
      <tr>
        <th>Titulo</th>
        <th>Subtitulo</th>
        <!-- <th>Foto</th> -->
        <th width="30%">Contenido</th>
        <!-- <th>Link</th> -->
        <th>Fecha</th>
        <th colspan="3"></th>
      </tr>
    </thead>

    <tbody>
      <% @articles.each do |article| %>
        <tr>
          <td><%= article.title %></td>
          <td><%= article.subtitle %></td>
          <!-- <td><%= image_tag(article.photo) %></td> -->
          <td><%= cut_long_text(article.content) %></td>
          <!-- <td><%= article.link %></td> -->
          <td><%=l article.date, :format => :short %></td>
          <td><%= link_to 'Ver', article, data: { no_turbolink: true }  %></td>
          <td><%= link_to 'Editar', edit_article_path(article), data: { no_turbolink: true }  %></td>
          <td><%= link_to 'Eliminar', article, method: :delete, data: { confirm: 'Are you sure?', no_turbolink: true } %></td>
        </tr>
      <% end %>
    </tbody>
  </table>


  <div class="general-actions">
    <%= link_to 'Crear Articulo', new_article_path, class: "btn btn-form", data: { no_turbolink: true }  %>
  </div>

</div>
