<!-- Contáctanos -->
<section class="contact-us text-center section-space" id="contactenos">
  <div class="container wow bounceInUp">
    <div class="row">
      <div class="col-xs-12">
        <%= image_tag("contactenos.png", alt: "Contáctenos") %>
      </div>
      <div class="contact-us-information col-xs-12 col-sm-8 col-sm-offset-2">
        <%= form_for @user, url: '/contact_us/', id: "contact_us" do |u| -%>
          <div class="col-xs-12 col-sm-6">
            <label>Nombre</label>
            <%= u.text_field :name, class: 'form-control', placeholder: 'Ej: Camilo Ruiz Cadavid', required: 'required' %>
          </div>
          <div class="col-xs-12 col-sm-6">
            <label>Correo Electrónico</label>
            <%= u.text_field :email, class: 'form-control', placeholder: 'Ej: correo@dominio.com', type: 'email', required: 'required' %>
          </div>
          <div class="col-xs-12 col-sm-6">
            <label>Empresa</label>
            <%= u.text_field :company, class: 'form-control', placeholder: 'Ej: Grupo Creativo Habla', required: 'required' %>
          </div>
          <div class="col-xs-12 col-sm-6">
            <label>Teléfono</label>
            <%= u.text_field :phone, class: 'form-control', placeholder: 'Ej: (+57)(4) 448 1925', required: 'required' %>
          </div>
          <div class="col-xs-12 form-subject">
            <label>Asunto</label>
            <div class="col-xs-12 col-sm-6 col-lg-3">
              <%= radio_button_tag(:subject, "Expositor", selected: 'selected') %>
              <%= label_tag(:subject_1, "Expositor") %>
            </div>
            <div class="col-xs-12 col-sm-6 col-lg-3">
              <%= radio_button_tag(:subject, "Comunidad") %>
              <%= label_tag(:subject_2, "Comunidad") %>
            </div>
            <div class="col-xs-12 col-sm-6 col-lg-3">
              <%= radio_button_tag(:subject, "Patrocinador") %>
              <%= label_tag(:subject_3, "Patrocinador") %>
            </div>
            <div class="col-xs-12 col-sm-6 col-lg-3">
              <%= radio_button_tag(:subject, "Medio de comunicación") %>
              <%= label_tag(:subject_4, "Medio de comunicación") %>
            </div>
          </div>
          <div class="col-xs-12 col-sm-12">
            <label>Comentario</label>
            <%= text_area :user, :comment, class: 'form-control', rows: 4, cols: 50, required: 'required' %>
          </div>    

          <div class="col-xs-12 buttons">
            <%= submit_tag "Enviar", :class => "btn-form" %>
          </div>
        <% end %>
      </div>
      <div class="col-xs-12 col-sm-8 col-sm-offset-2">
        <%= bootstrap_flash %>
      </div>
    </div>
  </div>
</section>